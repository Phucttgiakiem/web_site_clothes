@{
    var query = TempData["sanphams"] as IEnumerable<Website_clothe.Models.Sanpham>;
}

    <div class="container d-flex flex-wrap-reverse justify-content-md-evenly" style="margin:150px;">
        @Html.Action("Menuleft", "Menu")
        <div class="col-10">
            <div class="main-product">
                @if (query != null && query.Any())
                    {
                        foreach (var item in query)
                        {
                            <div class="card-item" onclick="redirectToDetail(@item.Masanpham)">
                                <div class="card-img-item">
                                    <img src="~/Content/img/kisd_dichoi.jpg" width="200" height="200" />
                                    <button class="card-btn-item">Thêm vào giỏ hàng</button>
                                </div>
                                <div class="card-main">
                                    
                                    <p>@item.Tensanpham</p>
                                    <p>@item.Giaban - đ</p>
                                </div>
                            </div>
                        }
                    }
                else
                {
                    <p>Không có thông tin</p>
                }
            </div>
        </div>
    </div>
    <script>
    function redirectToDetail(id) {
        window.location.href = '@Url.Action("Detailproduct", "product")' + '?id=' + id;
    }
    </script>


